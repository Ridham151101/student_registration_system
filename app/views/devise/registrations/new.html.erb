<div class="container d-flex justify-content-center min-vh-100">
  <div class="col-md-6">
    <h2 class="mb-4 text-center">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, class: 'needs-validation', novalidate: true }) do |f| %>
      
      <div class="mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
        <div class="invalid-feedback">
          Please enter your email.
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
        <div class="invalid-feedback">
          Please enter your password.
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: 'form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true %>
        <div class="invalid-feedback">
          Please confirm your password.
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control', required: true %>
        <div class="invalid-feedback">
          Please enter your name.
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :dob, class: 'form-label' %>
        <%= f.date_select :dob, { class: 'form-select', required: true }, { class: 'form-control' } %>
        <div class="invalid-feedback">
          Please select your date of birth.
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :address, class: 'form-label' %>
        <%= f.text_area :address, class: 'form-control', required: true %>
        <div class="invalid-feedback">
          Please enter your address.
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :photo, class: 'form-label' %>
        <%= f.file_field :photo, class: 'form-control' %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Sign Up", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
